<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:backgroundTintMode="src_over"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:orientation="horizontal">

        <TextView
            android:paddingTop="20dp"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@drawable/borde_azul"
            android:text="Â¿Estas listo para ir a pagar?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <TextView
        android:text=""
        android:textSize="20sp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/producto_perdido_2" />



    <View android:layout_margin="4dp" android:layout_height="0.2dp"
        android:layout_width="fill_parent"/>

    <ListView
        android:id="@+id/paired_devices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stackFromBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:textAlignment="center">

        <Button
            android:layout_width="360dp"
            android:text="Volver"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:background="@drawable/borde_redondo"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="360dp"
            android:text="Ir a pagar"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:background="@drawable/borde_redondo_amarillo"
            android:layout_marginLeft="1dp" />

    </LinearLayout>

</LinearLayout>