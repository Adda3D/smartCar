<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_1"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="466dp"
        android:layout_height="819dp"
        android:layout_above="@+id/pagar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="443dp"
            android:layout_height="109dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="105dp"
                android:layout_height="82dp"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/icon_lista_de_compra" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                android:layout_marginLeft="10dp"

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lista de"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="compra"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artículos"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#4F4F4F">
                <TextView
                    android:layout_marginTop="130dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sin productos..."
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                />
                <ListView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="309dp" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:text="Resumen"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/gray_2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subtotal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$00.0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$00.0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="805dp"
        android:layout_height="292dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/boton_de_escaner" />

    <ImageButton
        android:id="@+id/bt_scan"
        android:layout_width="480dp"
        android:layout_height="190dp"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/borde_redondo_amarillo"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        app:cornerRadius="70dp"
        app:icon="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631"
        app:srcCompat="@drawable/button" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/borde_gris"
        android:id="@+id/pagar"
        android:layout_width="362dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="10dp"
        android:text="Ir a pagar"
        android:textSize="30dp"
        android:enabled="false"
        app:cornerRadius="10dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="805dp"
        android:layout_height="1300dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="79dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ejemplo" />

    <VideoView
        android:id="@+id/VideoView"
        android:layout_width="805dp"
        android:layout_height="1300dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="79dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ejemplo" />

    //TURNO CARNICERIA
    <LinearLayout
        android:id="@+id/carniceria"
        android:layout_width="791dp"
        android:layout_height="360dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/fondo_turno_pantalla_1"
        android:orientation="vertical"
        android:gravity="center"
        android:scaleType="centerCrop">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_carniceria">
        </ImageView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="¡Te avisaremos cuando tu turno este cerca!" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Turno"
            android:layout_marginTop="10dp"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/borde_redondo_amarillo"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:text="Solicitar turno" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/turno_layaut"
        android:layout_width="791dp"
        android:layout_height="360dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/fondo_turno_pantalla_1"
        android:orientation="vertical"
        android:gravity="center"
        android:scaleType="centerCrop">

        <ImageView
            android:layout_width="791dp"
            android:layout_height="fill_parent"
            app:srcCompat="@drawable/turno">
        </ImageView>
    </LinearLayout>

    //Calculadora
    <LinearLayout
        android:id="@+id/calculadora"
        android:layout_width="791dp"
        android:layout_height="360dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:background="@color/gray_2"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:scaleType="centerCrop">

        //MUESTRA DE LOS NUMEROS
        <EditText
            android:id="@+id/pantalla"
            android:layout_width="791dp"
            android:layout_height="70dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_marginRight="10dp"
            android:paddingRight="50dp"
            android:textStyle="bold"></EditText>
        //BOTONES DE LA CALCULADORA
        <LinearLayout
            android:layout_width="791dp"
            android:layout_height="300dp"
            android:orientation="horizontal">
            //BOTONES DE NUMEROS
            <LinearLayout
                android:layout_width="474.6dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:background="@color/white">
                //NUMEROS
                <LinearLayout
                    android:layout_width="791dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30sp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="7" />

                    <Button
                        android:id="@+id/btn8"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="8" />

                    <Button
                        android:id="@+id/btn9"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="9" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="791dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="4" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="5" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="6" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="791dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="1" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="2" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="3" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="791dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnborrar"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        android:text="CE" />

                    <Button
                        android:id="@+id/btn0"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:text="0"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/btnpunto"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="79dp"
                        android:textSize="30dp"
                        android:text="." />

                </LinearLayout>
            </LinearLayout>
            //BOTONES DE OPERACIONES
            <LinearLayout
                    android:layout_width="316.4dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    /*android:paddingTop="5dp"*/
                    //BOTONES OPERACIONES
                    <LinearLayout
                        android:layout_width="316.4dp"
                        android:layout_height="230dp"
                        android:orientation="horizontal">
                            <Button
                                android:id="@+id/btnsuma"
                                android:layout_width="138dp"
                                android:layout_height="220dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textSize="50dp"
                                android:text="+"/>
                        //BOTONES -X/
                        <LinearLayout
                            android:layout_width="316.4dp"
                            android:layout_height="220dp"
                            android:orientation="vertical">
                                <Button
                                    android:id="@+id/btnretro"
                                    android:layout_width="140dp"
                                    android:layout_height="55dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:textSize="30dp"
                                    android:text="←"/>
                                <Button
                                    android:id="@+id/btnmenos"
                                    android:layout_width="140dp"
                                    android:layout_height="55dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:textSize="30dp"
                                    android:text="-"/>
                                <Button
                                    android:id="@+id/btnpor"
                                    android:layout_width="140dp"
                                    android:layout_height="55dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:textSize="30dp"
                                    android:text="×" />
                                <Button
                                    android:id="@+id/btndividir"
                                    android:layout_width="140dp"
                                    android:layout_height="55dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:textSize="30dp"
                                    android:text="÷"/>
                        </LinearLayout>
                    </LinearLayout>
                    //BOTON IGUAL
                    <Button
                        android:id="@+id/btnigual"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="30dp"
                        android:text="="/>
                </LinearLayout>
         </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/borde_gris"
        android:id="@+id/button2"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="18dp"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        android:textColor="@color/white"
        android:text="♥ Mapa de la tienda" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="291dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/borde_gris"
        android:drawableLeft="@drawable/ic_carniceria"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        android:textColor="@color/white"
        android:text="Turno Carniceria" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="553dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/borde_gris"
        android:drawableLeft="@drawable/ic_icono_boton_calculadora"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        android:textColor="@color/white"
        android:text="Calculadora" />



</RelativeLayout>